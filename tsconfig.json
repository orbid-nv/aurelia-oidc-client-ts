{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "amd",
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
      "resources": [
        ""
      ]
    },
    "allowJs": false
  },
  "include": [
    "src",
    "dev-app",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
}
